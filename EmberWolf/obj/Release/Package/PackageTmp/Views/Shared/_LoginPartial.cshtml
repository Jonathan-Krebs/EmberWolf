@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <div class="py-2 d-none d-md-inline-block mr-4 text-dark">
            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </div>
    }
}
else
{
    <div class="d-none d-md-inline-block">
        <a class="py-2 d-none d-md-inline-block mr-4 text-white Transition02" href="~/Account/Login">Login</a>
    </div>
    <div class="d-none d-md-inline-block">
        <a class="py-2 d-none d-md-inline-block mr-4 btn btn-outline-light" href="~/Account/Register">Sign Up</a>
    </div>
}
