<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="editor-body open">
        <div class="editor-nav">
            <div class="editor-menu">
                <div class="editor-menu-sidebar">
                    <span class="menu-item">
                        <span style="width: 10px;height: 10px;background: #333;border-radius: 100%;display: block;margin: 0px auto;" ></span>
                    </span>
                    <a href="#" class="menu-item text-nodecoration active">
                        <span class="icon-grid"></span>
                    </a>
                    <a href="#" class="menu-item text-nodecoration">
                        <span class="icon-badge"></span>
                    </a>
                    <a href="#" class="menu-item text-nodecoration">
                        <span class="icon-briefcase"></span>
                    </a>
                    <a href="#" class="menu-item text-nodecoration bottom">
                        <span class="icon-settings"></span>
                    </a>
                </div>
                <div class="editor-menu-main">
                    @Html.Partial("~/Views/Shared/Edit-Menu.cshtml")
                </div>
                <div class="editor-menu-bottom">
                    <span title="Close Menu" data-toggle="tooltip" onclick="$('.editor-body').removeClass('open');"><span class="icon-arrow-left-circle pointer text-primary"></span></span>
                    <div class="ml-auto">
                        <span class="icon-screen-desktop mr-2"></span>
                        <span class="icon-screen-tablet mr-2"></span>
                        <span class="icon-screen-smartphone"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="editor-frame styled-scroll">
            <div class="editor-background">

            </div>
            <div class="editor-content">
                <div class="editor-content-inner">
                    @*<iframe frameborder="0" style="width: 100%; height: 100vh" src="~/home/index"></iframe>*@
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="menu-toggle">
            <div class="open-show">
               
            </div>
            <div class="open-hide">
                <span title="Open Menu" data-toggle="tooltip" onclick="$('.editor-body').addClass('open');"><span class="icon-arrow-right-circle pointer text-primary"></span></span>
            </div>
        </div>
    </div>

   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        function OpenMenu(Menu) {
            if ($(".menu.open").data('menu') == 'Main') {
                $(".menu.open").removeClass('open').addClass('closed-left');
                $("[data-menu='" + Menu + "']").addClass('open').removeClass('closed-right');
            } else {
                $(".menu.open").removeClass('open').addClass('closed-right');
                $("[data-menu='" + Menu + "']").addClass('open').removeClass('closed-left');
            }
        }
    </script>
</body>
</html>
